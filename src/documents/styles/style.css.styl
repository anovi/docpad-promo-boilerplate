/*
* > Imports
*/
@import 'nib'
@import '/var.styl'



/*
* > Base
*/
*
  box-sizing border-box

body, html
  padding 0
  margin 0
  width 100%
  height 100%
  font-family mainFont
  font-size base-font-size
  line-height base-line-height
  background-color back-color
  color black
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.content
  margin 0 auto
  padding 100px 50px
  max-width textWidth
  clearfix()

h1, h2, h3, h4, h5, h6
  font-family headerFont
  color dark-color
  line-height 1.4
  &:first-of-type
    margin-top 0

a
  color link-color
  text-decoration none
  &:hover
    color display-color

button
  clearButton()

p
  margin-top 0


/*
* > Global
*/
.g-inline-icon
  display inline-block
  vertical-align middle



/*
* > Grid
*/
@import '../../static/vendor/bootstrap-grid.css'





/*
* > Blocks
*/

/*
* >> Likes
*/
.likely
  display inline-flex
  vertical-align middle
.likely__widget
  margin-right 20px
  cursor pointer
  size 48px 48px
  border-radius 24px
  transition all 0.2s ease
  svg
    display block
  &:last-child
    margin-right 0
  &:hover
    position relative
    transform scale(1.15)
    &:before
      content ''
      display none
      absolute top 0 left 0 right 0 bottom 0
      border-radius 24px
      background rgba(0,0,0,0.1)
  &:active
    transform scale(1)
.likely__counter
  display block
  margin-top 3px
  font-size 12px

/*
* >> Menu
*/
.mainMenu__item
  display inline-block
  margin-right 30px
  +screen-large()
    display block


/*
* >> Sidebar
*/
.sidebar
  float right
  margin-bottom 40px











