/*
* > Fonts
*/
mainFont   = 'PT Sans', 'Arial', 'Helvetica', sans-serif
headerFont = 'PT Sans', 'Helvetica', 'Arial', sans-serif


/*
* > Colors
*/
dark-color    = #322B1E
active-color  = #4533E8
link-color    = rgb(0,0,238)
display-color = #FF472C
light-color   = #BDB0B0
back-color    = #FFFFFF


/*
* > Metrics
*/
textWidth = 1000px
blogWidth = 900px


/*
* > Fonts variables
*   Based on Golden ratio = 1,620689655
*   Used tool - gridlover.net/app/
*/
base-ratio       = 1.620689655
sec-ratio        = 1.333

base-font-size   = 20px
base-line-height = 1.5
base-grid-unit   = unit(base-line-height, 'rem')

h1-font-size     = 4.222222222em
h1-line          = 0.381578947em
h1-lines         = 3
h1-line-height   = h1-line * h1-lines
h1-margin-top    = 2 * h1-line
h1-margin-bottom = 3 * h1-line

h2-font-size     = 2.611111111em
h2-line          = 0.617021277em
h2-lines         = 2
h2-line-height   = h2-line * h2-lines
h2-margin-top    = 2 * h2-line
h2-margin-bottom = 1 * h2-line

h3-font-size     = 1.611111111em
h3-line          = 1em
h3-lines         = 1
h3-line-height   = h3-line * h3-lines
h3-margin-top    = 1 * h3-line
h3-margin-bottom = 1 * h3-line

h4-font-size     = 1em
h4-line          = 1.611111111em
h4-lines         = 1
h4-line-height   = h4-line * h4-lines
h4-margin-top    = 1 * h4-line
h4-margin-bottom = 1 * h4-line
// Variables are rounded to pixels
// It's safe to multiply with integers
// eg. h1 {margin: 2*h1-line 0;}
// The grid will stay aligned





/*
* > Funtcions
*/
// Grid unit
gu(unit=1)
  base-grid-unit * unit

getModularScaleUp(font, ratio = base-ratio)
  return font * ratio

getModularScaleDown(font, ratio = base-ratio)
  return font / ratio

getBaseLineSize(font)
  return base-line-height/font

// Because variables do not work in native calc
calc(prop, val, fallback = false)
  if (fallback) {
   {prop}: fallback;
  }
  {prop}: s("-webkit-calc(%s)",val);
  {prop}: s("calc(%s)", val);

/*
* Arguments
* base line's height
* font size of new text
* amount of lines of base text
* amount of lines of new text
*/
incrementLeading(baseLine, fontSize, baseLines, newLines)
  return baseLine * baseLines / newLines / fontSize

// Чтобы автоматически растягивать блоки до ширины max-width
widthFix()
  &:after
    content "."
    display block
    visibility hidden
    height 0
    clear both


/*
* > Style Helpers
*/
small-caps()
  font-variant-caps: small-caps
  -moz-font-feature-settings: "smcp"
  -ms-font-feature-settings: "smcp"
  -webkit-font-feature-settings: "smcp"
  font-feature-settings: "smcp"

all-small-caps()
  font-variant-caps: all-small-caps
  -moz-font-feature-settings: "c2sc", "smcp"
  -ms-font-feature-settings: "c2sc", "smcp"
  -webkit-font-feature-settings: "c2sc", "smcp"
  font-feature-settings: "c2sc", "smcp"

all-caps()
  text-transform uppercase

old-nums()
  font-variant-numeric: oldstyle-nums
  -moz-font-feature-settings: "onum"
  -ms-font-feature-settings: "onum"
  -webkit-font-feature-settings: "onum"
  font-feature-settings: "onum"

clearButton()
  background trasparent
  border none
  outline-style none
  border-radius 0
  margin 0
  padding 0

flex()
  add-property('display', -webkit-box)      /* OLD - iOS 6-, Safari 3.1-6 */
  add-property('display', -moz-box)         /* OLD - Firefox 19- (buggy but mostly works) */
  add-property('display', -ms-flexbox)      /* TWEENER - IE 10 */
  add-property('display', -webkit-flex)     /* NEW - Chrome */
  s('flex')




/*
* > Media Queries
*   From bootstrap
*/

/* Extra small devices (phones, less than 768px) */

screen-small()
  /* Small devices (tablets, 768px and up) */
  @media screen and (min-width: 768px)
    {block}

screen-medium()
  /* Medium devices (desktops, 992px and up) */
  @media screen and (min-width: 992px)
    {block}

screen-large()
  /* Large devices (large desktops, 1200px and up) */
  @media screen and (min-width: 1200px)
    {block}













